{% extends 'base.html.twig' %}

{% block content %}
<table class="listing">
    <tr>
        <th></th>
        <th>Name</th>
        <th>Website</th>
        <th>City</th>
        <th>Country</th>
        <th>Available</th>
        <th>Updated</th>
        <th>Contact</th>
    </tr>
    {% for developer in developers %}
        <tr>
            <td>
                {% if developer.image_url %}
                    <div class="image-wrapper">
                        <img src="{{ developer.image_url }}">
                    </div>
                {% endif %}
            </td>
            <td>{{ developer.name }}</td>
            <td>
                {% if developer.url_website %}
                    <a href="{{ developer.url_website }}">Website</a>
                {% else %}
                    n/a
                {% endif %}
            </td>
            <td>{{ developer.city }}</td>
            <td>{{ developer.country }}</td>
            <td>
                {% if developer.next_available %}
                    {{ developer.next_available|date('M Y') }}
                {% else %}
                    No
                {% endif %}
            </td>
            <td>{{ developer.last_updated|date('m/d/y') }}</td>
            <td>
                {% if developer.email %}
                    <a href="mailto:{{ developer.email }}"><i class="fa fa-envelope-o"></i></a>
                {% endif %}
                {% if developer.twitter_username %}
                    <a href="https://twitter.com/{{ developer.twitter_username }}"><i class="fa fa-twitter"></i></a>
                {% endif %}
                {% if developer.github_username %}
                    <a href="https://github.com/{{ developer.github_username }}"><i class="fa fa-github"></i></a>
                {% endif %}
            </td>
        </tr>
    {% endfor %}
</table>
{% endblock %}