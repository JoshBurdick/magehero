<!DOCTYPE html>
<html>
<head>
    {% block head %}
        <link rel="stylesheet" type="text/css" href="/skin/css/app.css?v=1" media="all" />
        <link href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="/skin/css/tooltipster.css" />

        <title>MageHero | Magento Heroes</title>
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
        <script type="text/javascript" src="/js/jquery.tooltipster.js"></script>
        <script type="text/javascript" src="/js/jquery.tablesorter.min.js"></script>
        <script type="text/javascript" src="/js/app.js"></script>

    {% endblock %}
</head>
<body>
<div class="wrapper">
    <div class="account">
        {% if session.github_username %}
            <a href="/profile">{{ session.github_username }}</a> |
            <a href="/logout"><i class="fa fa-sign-out"></i> Log Out</a>
        {% else %}
            <a href="/login"><i class="fa fa-sign-in"></i> Login</a>
        {% endif %}
    </div>
    {% block masthead %}
        <div class="masthead">
            <h1><a href="/">MageHero</a></h1>
            <p>Magento Heroes</p>
        </div>
    {% endblock %}

    <div class="content">
        {% block content %} {% endblock %}
    </div>
</div>
<div class="footer">
    <a href="https://github.com/kalenjordan/magedevs#frequently-asked-questions">Frequently asked questions</a>
</div>

<script>
    $(document).ready(function() {
        $('.tooltip').tooltipster({
            delay: 0
        });
    });
</script>

{% if local_config.getHellobarId() %}
    <script type="text/javascript" src="//s3.amazonaws.com/scripts.hellobar.com/{{ local_config.getHellobarId() }}.js"></script>
{% endif %}

{% if local_config.getGoogleAnalyticsUa() %}
    <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', '{{ local_config.getGoogleAnalyticsUa() }}', 'auto');
        ga('send', 'pageview');
    </script>
{% endif %}

</body>
</html>

