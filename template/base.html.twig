<!DOCTYPE html>
<html>
<head>
    {% block head %}
        <link rel="stylesheet" type="text/css" href="/skin/css/app.css?v=1" media="all" />
        <link href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
        <link rel="stylesheet" type="text/css" href="/skin/css/tooltipster.css" />

        <title>MageHero | Magento Ninjas, Rockstars, and Samurais</title>
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
        <script type="text/javascript" src="/js/jquery.tooltipster.js"></script>
        <script type="text/javascript" src="/js/app.js"></script>

    {% endblock %}
</head>
<body>
<div class="wrapper">
    <div class="account">
        {% if session.github_username %}
            <a href="/profile">{{ session.github_username }}</a> |
            <a href="/logout"><i class="fa fa-sign-out"></i> Log Out</a>
        {% else %}
            <a href="/login"><i class="fa fa-sign-in"></i> Login</a>
        {% endif %}
    </div>
    {% block masthead %}
        <div class="masthead">
            <h1><a href="/">MageHero</a></h1>
            <p>Magento Ninjas, Rockstars, and Samurais</p>
        </div>
    {% endblock %}

    <div class="content">
        {% block content %} {% endblock %}
    </div>
</div>
<div class="footer">
    <a href="https://github.com/kalenjordan/magedevs#frequently-asked-questions">Frequently asked questions</a>
</div>

<script>
    $(document).ready(function() {
        $('.tooltip').tooltipster({
            delay: 0
        });
    });
</script>

<script type="text/javascript" src="//s3.amazonaws.com/scripts.hellobar.com/d22216a3a883105dc86fa5ceab120cba42a14f0b.js"></script>

</body>
</html>

