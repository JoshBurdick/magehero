{% extends 'base.html.twig' %}

{% block title %}Posts tagged as {{ tag.getTagText() }} | MageHero{% endblock %}

{% block content %}

    <h2>Posts tagged as {{ tag.getTagText() }}</h2>

    <ul class="listing">
        {% for post in posts %}
            <li class="listing-post">
                {% include 'fragment/post.html.twig' %}
            </li>
        {% endfor %}
    </ul>
{% endblock %}
